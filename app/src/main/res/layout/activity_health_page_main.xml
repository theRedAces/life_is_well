<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHealthHome"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button4"
        android:layout_width="137dp"
        android:layout_height="156dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="41dp"
        android:text="Add +"
        android:backgroundTint="@color/colorFinanceHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="137dp"
        android:layout_height="156dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="63dp"
        android:text="Workout"
        android:backgroundTint="@color/colorFinanceHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/macroTrackerButton" />

    <Button
        android:id="@+id/button2"
        android:layout_width="137dp"
        android:layout_height="156dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="63dp"
        android:text="Calories"
        android:backgroundTint="@color/colorFinanceHome"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/macroTrackerButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="26dp"
        android:text="Nav Bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/macroTrackerButton"
        android:layout_width="137dp"
        android:layout_height="156dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="63dp"
        android:backgroundTint="@color/colorFinanceHome"
        android:text="Macro Tracker"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>